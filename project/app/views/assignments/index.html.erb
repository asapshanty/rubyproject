<p id="notice"><%= notice %></p>

<h1>Assignments</h1>

<table style= "width:100%">
  <thead>
    <tr>
      <th>Assignment Name</th>
      <th>Due Date</th>
      <th>Professor</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.assignname %></td>
        <td><%= assignment.duedate %></td>
        <td><%= assignment.professor.firstname %></td>
        <td><%= assignment.section.sectionname %></td>
        <td><%= link_to 'Show', assignment %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

